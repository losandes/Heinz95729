 <!-- <body onload="SignOutIcon()" > -->
<body>
    <header id="header">
        <h1><a href="/">Papyr</a></h1>

        <div class="search-form">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" placeholder="search" data-bind="textInput: searchString">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" data-bind="click: go">Go!</button>
                </span>
            </div><!-- /input-group -->
        </div>

        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" id="menu1" type="button" data-toggle="dropdown"><span class="caret"></span></button>
            <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                <li data-bind="visible: isLogin" role="presentation"><a role="menuitem" tabindex="-1" href="/orderHistory">Your Orders</a></li>
                <li data-bind="visible: !isLogin()" role="presentation"><a role="menuitem" tabindex="-1" href="/login">Login</a></li>
                <li data-bind="visible: !isLogin()" role="presentation"><a role="menuitem" tabindex="-1" href="/register">Register</a></li>
                <li data-bind="visible: isLogin" role="presentation" class="divider"></li>
                <li data-bind="visible: isLogin" role="presentation"><a role="menuitem" tabindex="-1" href="/logout">Logout</a></li>
            </ul>
        </div> 

        <nav>

           <!--  <span data-bind="foreach: links">
                <a data-bind="text: text, href: href"></a>
            </span> -->

            <a href="/checkout">
                 <i class="fa fa-shopping-cart"><span id="cart-count" data-bind="text: cartCount"></span></i>
             </a>
             <div id="logout">
            </div> 
        </nav>



    </header>
    <div class="container">
        {{{body}}}
    </div><!-- /container -->

    <!-- templates -->

    {{> empty}}
    {{> error404}}
    {{> searchNoResults}}
    {{> productGrid}}
    {{> bookDetails}}
    {{> login}}
    {{> loginGuest}}
    {{> register}}
    {{> checkout}}
    {{> orderHistory}}
    {{> payment}}
    {{> paymentSuccess}}

    <!-- /templates -->

    <!-- Lib CDN's-->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js"></script>
    <script src="https://js.stripe.com/v2/"></script>

    <script src="/scripts/lib/bower_components/hilary/release/hilary.min.js"></script>
    <script src="/scripts/lib/bower_components/gidget/release/gidget.min.js"></script>
    <script src="/scripts/lib/bower_components/es6-promise/promise.min.js"></script>
    <script src="/scripts/lib/bower_components/fetch/fetch.js"></script>
    <script src="/scripts/lib/ko.binders.js"></script>
    <script src="/scripts/lib/grid.js"></script>

    <script src="/scripts/controllers/authController.js"></script>
    <script src="/scripts/controllers/booksController.js"></script>
    <script src="/scripts/controllers/homeController.js"></script>
    <script src="/scripts/controllers/exampleController.js"></script>
    <script src="/scripts/controllers/checkoutController.js"></script>



    <script src="/scripts/locale/en_US.js"></script>

    <script src="/scripts/models/Book.js"></script>
    <script src="/scripts/models/Books.js"></script>
    <script src="/scripts/models/Product.js"></script>
    <script src="/scripts/models/Products.js"></script>
    <script src="/scripts/models/Order.js"></script>
    <script src="/scripts/models/Orders.js"></script>
    <script src="/scripts/models/Payment.js"></script>


    <script src="/scripts/viewModels/HomeVM.js"></script>

